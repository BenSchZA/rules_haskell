load("@io_tweag_rules_haskell//haskell:haskell.bzl", "haskell_import", "haskell_library", "haskell_test")

haskell_import(name = "base")

cc_library(
    name = "cbits-indirect",
    srcs = ["cbits/impl.c"],
)

cc_library(
    name = "cbits",
    srcs = ["cbits/intf.c"],
    deps = ["cbits-indirect"],
)

haskell_library(
    name = "mypkg",
    srcs = ["src/MyModule.hs"],
    src_strip_prefix = "src",
    deps = [
        ":base",
        ":cbits",
    ],
)

haskell_test(
    name = "indirect-link",
    srcs = ["test/Main.hs"],
    src_strip_prefix = "test",
    deps = [
        ":base",
        ":mypkg",
    ],
)
